<?php 
include 'include/db_class.php';
$conn=new db_class();
if (isset($_POST['Submit'])) 
{
   $id= pdv($_POST['id']);
	$name= pdv($_POST['name']);
	$address= pdv($_POST['address']);
	$email= pdv($_POST['email']);
$sql="UPDATE company 
		SET 
		  company_name=:name, 
			address=:address, 
			email=:email,			
		WHERE id=:id
		";
$args=[
			':id'=>$id,
			':name'=>$name, 
			':address'=>$address, 
			':email'=>$email
     ];
$stmt=$conn->queryList($sql, $args);


} 
?>


